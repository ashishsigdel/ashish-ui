{
  "name": "@ashish-ui/markup-renderer",
  "version": "1.0.4",
  "description": "A lightweight markdown renderer for React with code blocks, tables, and alerts.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "markdown",
    "renderer",
    "syntax-highlighting",
    "ui"
  ],
  "author": "Ashish",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "react-syntax-highlighter": "^15.6.1",
    "tsup": "^7.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13"
  }
}
